<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define the Material Components theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Apply Material Components style to FriendMessageStyle -->
    <style name="FriendMessageStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/friend_message_background</item>
    </style>

    <!-- Apply Material Components style to MyMessageStyle -->
    <style name="MyMessageStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">#E5E5EA</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
    </style>
</resources>
