<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light Mode Theme -->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Dark Mode Theme -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@android:color/background_dark</item>
    </style>

    <!-- Night Mode Theme (inherits from AppThemeDark) -->
    <style name="AppThemeNight" parent="AppThemeDark">
        <item name="android:windowBackground">@color/background_color_night</item>
        <item name="android:textColor">@color/text_color_night</item>
        <!-- Add other night mode theme attributes here -->
    </style>

    <!-- Apply Material Components style to FriendMessageStyle -->
    <style name="FriendMessageStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/friend_message_background</item>
    </style>

    <style name="UserMessageStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/user_message_background</item>
    </style>

    <!-- Apply Material Components style to MyMessageStyle -->
    <style name="MyMessageStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">#E5E5EA</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
    </style>
</resources>
